#imports the random function
#randint is a fxn to ranges from a specified value from (x,y) as stated
import random

def guess(x):
    # randint is a fxn to ranges from a specified value from (x,y) as stated
    random_number = random.randint(1, x)
    guess = 0 #guess is the variable and stated, hence the random number will not = o
    while guess != random_number: #!= means does not equal to
        guess = int(input("Guess a number 1 and " + str(x) + "")) #cause its an integer, we need to print out a string first
        if guess < random_number:
            print("Sorry, guess again, too low")
        elif guess > random_number:
            print("Sorry, guess again, too high")

    print("You have a guessed the number " + str(random_number) + " correctly")

def c_guess(x):
    low = 0 #ensures range starts from 0
    high = x + 50 #ensures the value specified isnt = high variable
    feedback = "" #empty to allow AI to guess
    while feedback != 'c':
        guess = random.randint(low, high)
        feedback = input(f'Is {guess} too high (H), too low(L), or correct(C)?'.lower())
        if feedback == "h":
            high = guess - 1
        elif feedback == "l":
            low = guess + 1

    print("I got it yay")

c_guess(int(input("What is your secret number"))) #put in int form to allow comparison between same attribute


